        }
        function cargarProyectos() {

            $.ajax({
                url: '/Home/listProyectos',
                type: 'post',
                dataType: 'json',
                cache: false
            }).done(function (resp) {
                console.log(resp);
                var div = $("#proyectos");
                    var select = " <option value='0' selected>Seleccione un proyecto</option>";
                $.each(resp, function (index, x) {
                    select += "<option value=" + x.idProyecto + ">"+ x.idProyecto +"."+ x.nombrePry + "</option>";
                });
                div.empty();
                div.append(select);
            }).fail();

        }
        function editarActividad(idCronograma) {
            $.ajax({
                url: '/Home/EditarActividad',
                type: 'post',
                dataType: 'json',
                data: { id: idCronograma },
                success: function (data) {
                    $('#IdCronograma').val(data.idCronograma);
                    $('#NombreCrgm').val(data.nombreCrgm);
                    $('#DescripcionCrgm').val(data.descripcionCrgm);
                    $('#HorasCrgm').val(data.horasCrgm);
                    $('#Jerarquia').val(data.jerarquia);
                    $('#FkProyecto').val(data.fkProyecto);
                    $('#estado').val(data.fkEstado);
                    $('#FkRolhora').val(data.fkRolhora);
                    $('#FkRecurso').val(data.fkRecurso);
                    $('#ActividadModal').modal('show');
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
        function cargarDetEstado() {

            $.ajax({
                    url: '/Home/listDetEstadoact',
                type: 'post',
                dataType: 'json',
