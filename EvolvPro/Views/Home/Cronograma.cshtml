@section Scripts{
    <script>
        $(document).ready(function () {
                cargarProyectos();
                cargarDetEstado();
            $("#btnGuardar").click(function () {
                if ($("#estado").val() != "") {
                    //procedemos
                    var formulario = $("#FormActualizarAct").serialize();

                    $.ajax({
                        url: '@Url.Action("guardarActividad","Home")',
                        type: 'post',
                        cache: false,
                        dataType: 'json',
                        data: formulario
                    }).done(function (resp) {
                        if (resp) {
                            swal("Actualizado con éxito");
                            cargarActividades();
                            $("#IdCronograma").val(""); // Vaciar el campo de entrada
                            $("#btnCerrar").click();
                        } else {
                            swal("Error al guardar1");
                        }
                    }).fail(function () {
                        swal("Error al guardar2");
                    });
                } else {
                    swal("El campo de estado es requerido");
                }
            });
        });
        function cargarActividades() {
                var valor = document.getElementById("proyectos").value;
                var valoract = document.getElementById("actividad").value;
                    if(valor == 0){
                            swal("elija un proyecto");
                        }else if(valor != 0 && valoract == ""){
                            $.ajax({
                                url: '/Home/mostrarActividadesBusca/',
                                type: 'post',
                                dataType: 'json',
                                data: { cadena: valor }, // Pasar la variable valor como parámetro
                                cache: false
                            }).done(function (resp) {
                                console.log(resp);
                                var div = $("#contenido");
