                                $.each(resp, function (index, crono) {
                                    tabla += "<tr>";
                                    tabla += "<td>" + crono.idCronograma + "</td>";
                                    tabla += "<td>" + crono.nombreCrgm + "</td>";
                                    tabla += "<td>" + crono.descripcionCrgm + "</td>";
                                    tabla += "<td>" + crono.rolHora + "</td>";
                                    tabla += "<td>" + crono.estado + "</td>";
                                    tabla += "<td>" + crono.recurso + "</td>";
                                    tabla += "<td><a class='btn btn-primary' href=\"javascript:editarActividad('" + crono.idCronograma + "')\">Editar</a></td>";
                                    tabla += "</tr>";
                                });
                                    tabla += "</tbody></table>";
                                div.empty();
                                div.append(tabla);
                            }).fail();
                        }else if(valor != 0 && valoract != "" && !isNaN(valoract) == true){
                            $.ajax({
                                url: '/Home/mostrarActividadesBusca2/',
                                type: 'post',
                                dataType: 'json',
                                    data: { cadena: valor, id: valoract },  // Pasar la variable valor como parámetro
                                cache: false
                            }).done(function (resp) {
                                console.log(resp);
                                var div = $("#contenido");
                                    var tabla = "<table class='table table-dark table - striped'> <thead> <tr> <th> codigo </th> <th> Titulo </th> <th> Descripcion </th> <th> Rol </th><th> Estado </th><th> Asignado a </th> <th>  </th> <th>  </th> <tbody> ";
                                $.each(resp, function (index, crono) {
                                    tabla += "<tr>";
                                    tabla += "<td>" + crono.idCronograma + "</td>";
                                    tabla += "<td>" + crono.nombreCrgm + "</td>";
                                    tabla += "<td>" + crono.descripcionCrgm + "</td>";
                                    tabla += "<td>" + crono.rolHora + "</td>";
                                    tabla += "<td>" + crono.estado + "</td>";
                                    tabla += "<td>" + crono.recurso + "</td>";
                                    tabla += "<td><a class='btn btn-primary' href=\"javascript:editarActividad('" + crono.idCronograma + "')\">Editar</a></td>";
                                    tabla += "</tr>";
                                });
                                    tabla += "</tbody></table>";
                                div.empty();
                                div.append(tabla);
                            }).fail();
                        }else if(valor != 0 && valoract != "" && !isNaN(valoract) == false){
                            $.ajax({
                                url: '/Home/mostrarActividadesBusca3/',
                                type: 'post',
                                dataType: 'json',
                                    data: { cadena: valor, acti: valoract },  // Pasar la variable valor como parámetro
                                cache: false
                            }).done(function (resp) {
                                console.log(resp);
                                var div = $("#contenido");
                                    var tabla = "<table class='table table-dark table - striped'> <thead> <tr> <th> codigo </th> <th> Titulo </th> <th> Descripcion </th> <th> Rol </th><th> Estado </th><th> Asignado a </th> <th>  </th> <th>  </th> <tbody> ";
                                $.each(resp, function (index, crono) {
