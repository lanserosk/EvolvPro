@model Cliente



<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-5 pty-3 text-white" style="height: 84.5vh;">
                <div class="py-5">
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a asp-action="Menu" asp-controller="Home" method="POST" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Inicio</span>
                            </a>
                        </li>
                        @if (ViewBag.sesion == "1")
                        {
                            <li>
                                <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-collection-fill"></i> <span class="ms-1 d-none d-sm-inline">Mantenimiento</span>
                                </a>
                                <ul class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                                    <li class="w-100">
                                        <a asp-action="Usuarios" asp-controller="Home" method="POST" class="nav-link px-0"> <span class="d-none d-sm-inline">Usuarios</span> </a>
                                    </li>
                                    <li>
                                        <a asp-action="Clientes" asp-controller="Home" method="POST" class="nav-link px-0"> <span class="d-none d-sm-inline">Clientes</span> </a>
                                    </li>
                                    <li>
                                        <a asp-action="Estado" asp-controller="Home" method="POST" class="nav-link px-0"> <span class="d-none d-sm-inline">Estados</span></a>
                                    </li>
                                    <li>
                                        <a class="nav-link px-0" asp-area="" asp-controller="Home" asp-action="DetEstado" method="POST"> <span class="d-none d-sm-inline">Detalle Estado</span></a>
                                    </li>
                                    <li>
                                        <a asp-action="Recurso" asp-controller="Home" method="POST" class="nav-link px-0"> <span class="d-none d-sm-inline">Recursos</span></a>
                                    </li>
                                    <li>
                                        <a asp-action="CategoriaIssue" asp-controller="Home" method="POST" class="nav-link px-0"> <span class="d-none d-sm-inline">Categorias de problemas</span></a>
                                    </li>
                                    <li>
                                        <a asp-action="Rolhora" asp-controller="Home" method="POST" class="nav-link px-0"> <span class="d-none d-sm-inline">Roles de proyectos</span></a>
                                    </li>
                                    <li>
                                        <a asp-action="PreguntaSeguridad" asp-controller="Home" method="POST" class="nav-link px-0"> <span class="d-none d-sm-inline">Preguntas de seguridad</span></a>
                                    </li>
                                </ul>
                            </li>

                        }

                        <li>
                            <a class="nav-link px-0 align-middle" asp-area="" asp-controller="Home" asp-action="Cronograma" method="POST">
                                <i class="fs-4 bi-calendar-week-fill"></i> <span class="ms-1 d-none d-sm-inline">Cronograma</span>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link px-0 align-middle" asp-area="" asp-controller="Home" asp-action="Proyectos" method="POST">
                                <i class="fs-4 bi-folder-fill"></i> <span class="ms-1 d-none d-sm-inline">Proyectos</span>
                            </a>
                        </li>
                        <li>
                            <a asp-action="Reuniones" asp-controller="Home" method="POST" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-camera-video-fill "></i> <span class="ms-1 d-none d-sm-inline">Reuniones</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <form asp-action="Index" asp-controller="Home" method="POST">
                    <button type="submit" class="btn btn-dark btn-lg float-end border-2 border-primary">Cerrar sesion</button>
                </form>

            </div>
        </div>
        <div class="col py-3" style="padding-right: 30px">
            @if (ViewBag.sesion == "1")
            {

                <h3>Clientes</h3>
                <hr>

                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#clienteModal">
                    Agregar cliente
                </button>

                <hr />
                <br />

                <div id="contenido">
                </div>
                <!-- Modal -->
                <div class="modal fade" id="clienteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h5 class="modal-title text-dark" id="exampleModalLabel">Registro de clientes </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-dark">

                                <form id="Form1">
                                    <label for="message-text" class="col-form-label">Nombre Completo: *</label>
                                    <input id="IdCliente" name="IdCliente" asp-for="IdCliente" type="hidden" class="form-control" />
                                    <input id="NombreCliente" name="NombreCliente" asp-for="NombreCliente" class="form-control  text-primary" placeholder="Ejm Juan Perez" />

                                    <label for="message-text" class="col-form-label">Dirección: *</label>
                                    <input id="DireccionCliente" name="DireccionCliente" asp-for="DireccionCliente" class="form-control text-primary" placeholder="Ejm. Col. Buenos Aires l#1" />

                                </form>

                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btnCerrar" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                <button type="button" id="btnGuardar" class="btn btn-primary">Guardar</button>
                            </div>

                        </div>
                    </div>
                </div>

            }
            else
            {
                <center><h1>Bienvenido Project manager</h1></center>
            }
        </div>
    </div>
</div>
@section Scripts{
    <script>

        function cargarTabla() {
            $.ajax({
                url: '/Home/mostrarClientes',
                type: 'post',
                dataType: 'json',
                cache: false
            }).done(function (resp) {
                // console.log(resp);
                var div = $("#contenido");
                var tabla = "<table class='table table-bordered table-vcenter js-dataTable-full text-white'><thead><tr><th>Id </th><th>Nombre Cliente</th><th>Dirección</th><th class='text-center' style='width: 15%;'>Acciones</th></tr></thead><tbody>";
                $.each(resp, function (index, cli) {
                    tabla += "<tr>";
                    tabla += "<td>" + cli.idCliente + "</td>";
                    tabla += "<td>" + cli.nombreCli + "</td>";
                    tabla += "<td>" + cli.direccionCli + "</td>";
                    tabla += "<td><a class='btn btn-primary' href=\"javascript:editarCli('" + cli.idCliente + "')\">Editar</a><a class='btn btn-danger' href=\"javascript:elimiarCli('" + cli.idCliente + "')\">Eliminar</a></td>";
                    tabla += "</tr>";
                });
                tabla += "</tbody></table>";
                div.empty();
                div.append(tabla);
            }).fail();

        }

        function editarCli(idCliente) {
            $.ajax({
                url: '/Home/EditarClientes',
                type: 'post',
                dataType: 'json',

                data: { id: idCliente },
                success: function (data) {
                    // console.log(data.nombreUsu);

                    $('#IdCliente').val(data.idCliente);
                    $('#NombreCliente').val(data.nombreCliente);
                    $('#DireccionCliente').val(data.direccionCliente);
                    $('#clienteModal').modal('show');
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }

        function elimiarCli(IdCliente) {
            swal({
                title: "Estas seguro?",
                text: "Una vez eliminado se pierde definitivamente....",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            url: '@Url.Action("EliminarClientes", "Home")',
                            type: 'post',
                            dataType: 'json',
                            cache: false,
                            data: { id: IdCliente }
                        }).done(function (resp) {
                            if (resp) {
                                swal("Eliminado!")
                                cargarTabla();
                                $("#IdCliente").val("");
                            } else {
                                swal("Problemas al eliminar!")
                            }
                        }).fail();

                    } else {
                        swal("El registro no se elimino!");
                    }
                });
        }

        function limpiarModal() {
            $('#IdCliente').val('');
            $('#NombreCliente').val('');
            $('#DireccionCliente').val('');

            // Ocultar el modal
            $('#usuarioModal').modal('hide');
        }

        $(document).ready(function () {

            //jquery
            cargarTabla();

            //programamos los botones
            $("#btnGuardar").click(function () {
                if ($("#NombreCliente").val() != "" &&
                    $("#DireccionCliente").val() != "") {
                    //procedemos
                    var formulario = $("#Form1").serialize();

                    $.ajax({
                        url: '@Url.Action("guardarClientes","Home")',
                        type: 'post',
                        cache: false,
                        dataType: 'json',
                        data: formulario
                    }).done(function (resp) {
                        if (resp) {
                            swal("Guardado con éxito");
                            cargarTabla();
                            limpiarModal();
                            $("#btnCerrar").click();
                        } else {
                            swal("Error al guardar");
                        }
                    }).fail(function () {
                        swal("Error al guardar");
                    });
                } else {
                    swal("Todos los campos son requeridos");
                }
            });
        });
    </script>
}






