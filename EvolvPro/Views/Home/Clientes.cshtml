@section Scripts{
    <script>

        function cargarTabla() {
            $.ajax({
                url: '/Home/mostrarClientes',
                type: 'post',
                dataType: 'json',
                cache: false
            }).done(function (resp) {
                // console.log(resp);
                var div = $("#contenido");
                var tabla = "<table class='table table-stripperd text-white'><thead><tr><th>Id </th><th>Nombre Cliente</th><th>Dirección</th><th>Acciones</th></tr></thead><tbody>";
                $.each(resp, function (index, cli) {
                    tabla += "<tr>";
                    tabla += "<td>" + cli.idCliente + "</td>";
                    tabla += "<td>" + cli.nombreCli + "</td>";
                    tabla += "<td>" + cli.direccionCli + "</td>";
                    tabla += "<td><a class='nav-link' href=\"javascript:editarCli('" + cli.idCliente + "')\">Editar</a><a class='nav-link' href=\"javascript:elimiarCli('" + cli.idCliente + "')\">Eliminar</a></td>";
                    tabla += "</tr>";
                });
                tabla += "</tbody></table>";
                div.empty();
                div.append(tabla);
            }).fail();

        }


        function editarCli(idCliente) {
            $.ajax({
                url: '/Home/EditarClientes',
                type: 'post',
                dataType: 'json',

                data: { id: idCliente },
                success: function (data) {
                    // console.log(data.nombreUsu);

                    $('#IdCliente').val(data.idCliente);
                    $('#NombreCliente').val(data.nombreCliente);
                    $('#DireccionCliente').val(data.direccionCliente);
                    $('#clienteModal').modal('show');
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }

        function elimiarUsu(IdCliente) {
            swal({
                title: "Estas seguro?",
                text: "Una vez eliminado se pierde definitivamente....",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            url: '@Url.Action("EliminarClientes", "Home")',
                            type: 'post',
                            dataType: 'json',
                            cache: false,
                            data: { id: IdCliente }
                        }).done(function (resp) {
                            if (resp) {
                                swal("Eliminado!")
                                cargarTabla();
                            } else {
                                swal("Problemas al eliminar!")
                            }
                        }).fail();

                    } else {
                        swal("El registro no se elimino!");
                    }
                });
        }
        $(document).ready(function () {

            //jquery
            cargarTabla();

            //programamos los botones
            $("#btnGuardar").click(function () {
                if ($("#NombreCliente").val() != "" &&
                    $("#DireccionCliente").val()) {
                    //procedemos
                    var formulario = $("#Form1").serialize();

                    $.ajax({
                        url: '@Url.Action("guardarClientes","Home")',
                        type: 'post',
                        cache: false,
                        dataType: 'json',
                        data: formulario
                    }).done(function (resp) {
                        if (resp) {
                            swal("Guardado con éxito");
                            cargarTabla();
                            $("#btnCerrar").click();
                        } else {
                            swal("Error al guardar");
                        }
                    }).fail(function () {
                        swal("Error al guardar");
                    });
                } else {
                    swal("Todos los campos son requeridos");
                }
            });
        });
    </script>
}






